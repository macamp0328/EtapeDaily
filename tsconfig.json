{
  "compilerOptions": {
    "target": "es6",                 // Set the JavaScript version output
    "module": "commonjs",            // CommonJS modules for Node.js
    "outDir": "./dist",              // Redirect output structure
    "rootDir": "./src",              // Specify the root directory of input files
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Enables ES6 module emulation
    "skipLibCheck": true,            // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],           // Files to be included in compilation
  "exclude": ["node_modules"]        // Directories to be excluded from compilation
}
