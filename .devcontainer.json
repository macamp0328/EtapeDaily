{
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:linux",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "ms-python.python",
          "davidanson.vscode-markdownlint",
          "github.copilot"
        ]
      }
    }
  },
  "postCreateCommand": "apt-get update && python3 -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",
  "forwardPorts": [],
  "mounts": [],
  "remoteUser": "root"
}